{
  "manifest_version": 2,
  "name": "Discord Media view",
  "version": "1.1",
  "description": "A Chrome extension to download the image hovered by the user",
  "icons": {
    "128": "discord_neon_logo.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "tabs",
    "runtime"
  ],
  "background": {
    "scripts": ["backgroundScript.ts"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "<all_urls>"],
      "js": ["contentScript.ts"]
    }
  ],
  "browser_action": {
    "default_title": "Discord Media view",
    "default_popup": "popup.html"
  }
}
