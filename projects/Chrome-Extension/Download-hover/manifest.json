{
  "manifest_version": 2,
  "name": "Image Downloader",
  "version": "1.0",
  "description": "A Chrome extension to download the image hovered by the user",

  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "tabs"
  ],
  "background": {
    "scripts": ["backgroundScript.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_title": "Image Downloader",
    "default_popup": "popup.html"
  }
}
